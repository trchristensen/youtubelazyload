{
  "manifest": "1",
  "version": "1.0.1",
  "locale": {
  	"default": "en-us",
  	"supported": ["en-us"]
  },

  "elements": [
	  {
  	  "path": "files",
  	  "name": "YouTube LazyLoader",
  	  "version": "1.0.1",
  	  "settings": {
  		"config": {},
  		  "autopop": true,
        "properties": [
          {
            "name": "settings",
            "label": "Settings",
            "type": "group",
            "properties": [
              {
                "name": "youtubeURL",
                "label": "YouTube Video URL",
                "type": "string",
                "default": "",
                "min": 1
              },
              {
                "name": "size",
                "label": "Size",
                "type": "select",
                "values": [
                  "Small",
                  "Medium",
                  "Large",
                  "Extra-Large",
                  "HD",
                  "Auto"
                ],
                "default": "Auto",
                "min": 1
              },
              {
                "name": "position",
                "label": "Alignment",
                "type": "align",
                "default": "center",
                "min": 1
              }
            ]
          },
          {
            "name": "spacing",
            "label": "Spacing",
            "type": "group",
            "properties": [
              {
                "name": "margin-top",
                "label": "Margin Top",
                "type": "int",
                "default": 0,
                "step": 10,
                "min": 0
              },
              {
                "name": "margin-bottom",
                "label": "Margin Bottom",
                "type": "int",
                "default": 0,
                "step": 10,
                "min": 0
              }
            ]
          }
        ]
      }
    }
  ]
}
